<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editServiceName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="Service Name"
        android:inputType="textPersonName" />

    <LinearLayout
        android:id="@+id/Layoutspace1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/editServiceName"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutBut1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/Layoutspace1"
        android:orientation="vertical">


        <Button
            android:id="@+id/addButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ADD" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Layoutspace2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/LayoutBut1"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:id="@+id/Layout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/Layoutspace2"
        android:orientation="vertical">


        <Button
            android:id="@+id/updateButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="UPDATE" />
    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Layout2" />


</RelativeLayout>